@model List<BTH09_WebQuanLiSinhVien.Models.Student>

<div class="container mt-4">
    <h2 class="text-center">View List Student Here!</h2>
    <div class="text-center mb-3">
        <a href="/Student/Add" class="btn btn-success">Add Student</a>
    </div>
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Order</th>
                <th>ID</th>
                <th>Full Name</th>
                <th>Average Score</th>
                <th>Delete</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @{
                int index = 1; // Biến đếm để hiển thị số thứ tự
            }
            @foreach (var student in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@student.Id</td>
                    <td>@student.FullName</td>
                    <td>@student.AvgScore</td>
                    <td>
                        <a href="/Student/Delete/@student.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure to delete this student?')">Delete</a>
                    </td>
                    <td>
                        <a href="/Student/Edit/@student.Id" class="btn btn-warning btn-sm">Edit</a>
                    </td>
                </tr>
                index++; // Tăng biến đếm sau mỗi vòng lặp
            }
        </tbody>
    </table>
</div>
